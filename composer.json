{
  "name": "coffeecode/datalayer",
  "description": "The data layer is a persistent abstraction component of your database that PDO",
  "keywords": [
    "CoffeeCode",
    "UpInside",
    "Database",
    "PDO",
    "Save",
    "Delete",
    "Destroy",
    "CRUD"
  ],
  "homepage": "https://www.upinside.com.br",
  "license": "MIT",
  "authors": [
    {
      "name": "Robson V. Leite",
      "email": "cursos@upinside.com.br",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "CoffeeCode\\DataLayer\\": "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "robmorgan/phinx": "^0.16.2",
    "symfony/yaml": "^7.1"
  },
  "autoload-dev": {
    "psr-4": {
      "CoffeeCode\\DataLayer\\Tests\\": "tests"
    }
  },
  "scripts": {
    "migrate": "phinx migrate",
    "test": "phpunit",
    "coverage": "phpunit --coverage-html=coverage",
    "coveralls": "phpunit --coverage-clover build/logs/clover.xml",
    "post-install-cmd": [
      "@migrate"
    ]
  }
}
